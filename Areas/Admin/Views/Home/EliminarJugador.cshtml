@model ProyectoFinal.Models.Entities.Jugadores
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "EliminarJugador";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>IndexAdm</title>
	<link rel="stylesheet" href="~/estilos/estiloeliminarjugador.css">
</head>
<body>
	<header>
		<img class="LogoEquipo" src="~/Imagenes/logo.png" alt="Logo Equipo">
		<a>Administrador</a>
	</header>
	<main>
		<form method="post" action="~/Admin/Home/EliminarJugador" class="formeliminar">
			<input type="hidden" asp-for="Id" />
			<label class="pregunta">¿Desea eliminar al jugador @Model.Gamertag?</label>

			<div class="BotonesForm">
				<input type="submit" value="Si" />
				<a href="~/Admin"><input type="button" value="No" /></a>

			</div>
		</form>
	</main>
</body>
</html>
